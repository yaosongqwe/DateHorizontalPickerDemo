<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF">
    
        <RelativeLayout 
            android:id="@+id/layout_arrow_left"
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <ImageView 
            	android:id="@+id/iv_arrow_left"
                android:layout_width="6dp"
				android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_left"/>
        </RelativeLayout>
        
        
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="80dp"
	        android:layout_marginTop="15dp"
	        android:layout_toRightOf="@id/layout_arrow_left"
	        android:layout_toLeftOf="@+id/layout_arrow_right"
	        >
	        	<RelativeLayout 
	        	    android:id="@+id/layout_day_before"
			        android:layout_width="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_height="wrap_content"
			        android:layout_marginRight="5dp"
			        android:onClick="lestOneDay"
			        android:alpha="0.5">
			        <TextView 
			            android:id="@+id/tv_lastday_year"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="17sp"
			            android:textColor="#8B2C8C"
			            android:textStyle="bold"
			            android:text="----"/>
			        <TextView 
			            android:id="@+id/tv_lastday_month"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_below="@id/tv_lastday_year"
			            android:textSize="16sp"
			            android:textColor="#8B2C8C"
			            android:text="--"/>
			        <TextView 
			            android:id="@+id/tv_lastday"
			            android:layout_below="@id/tv_lastday_year"
			            android:layout_toRightOf="@id/tv_lastday_month"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="2dip"
			            android:textSize="16sp"
			            android:textColor="#8B2C8C"
			            android:text="--"/>
			    </RelativeLayout>
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_centerHorizontal="true"
			        android:layout_toRightOf="@id/layout_day_before"
			        android:layout_toLeftOf="@+id/layout_day_after" 
			        android:gravity="center"
			        >
				        <android.support.v4.view.ViewPager
					        android:id="@+id/vp_date_pager"
					        android:layout_width="match_parent"
					        android:layout_height="match_parent">
				    	</android.support.v4.view.ViewPager>
			    </LinearLayout>
				<RelativeLayout 
				    android:id="@+id/layout_day_after"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:layout_marginLeft="5dp"
			        android:onClick="addOneDay"
			        android:alpha="0.5">
			        <TextView 
			            android:id="@+id/tv_afterday_year"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="17sp"
			            android:textColor="#8B2C8C"
			            android:textStyle="bold"
			            android:text="----"/>
			        <TextView 
			            android:id="@+id/tv_afterday_month"
			            android:layout_below="@id/tv_afterday_year"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="16sp"
			            android:textColor="#8B2C8C"
			            android:text="--"/>
			        <TextView 
			            android:id="@+id/tv_afterday"
			            android:layout_below="@+id/tv_afterday_year"
			            android:layout_toRightOf="@+id/tv_afterday_month"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="2dip"
			            android:textSize="16sp"
			            android:textColor="#8B2C8C"
			            android:text="--"/>
			    </RelativeLayout>
	    </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/layout_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <ImageView 
            	android:id="@+id/iv_arrow_right"
                android:layout_width="6dp"
				android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_right"/>
        </RelativeLayout>
</RelativeLayout>
